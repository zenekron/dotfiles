[alias]
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
[credential]
	helper = /usr/lib/git-core/git-credential-libsecret
[init]
	defaultBranch = main
[pull]
	rebase = true
[user]
	email = zenekron@gmail.com
	name = zenekron

; delta
[include]
	path = ~/.dotfiles/modules/catppuccin/delta/catppuccin.gitconfig
[core]
	pager = delta
[interactive]
	diffFilter = delta --color-only
[merge]
	conflictstyle = diff3
[diff]
	colorMoved = default
[delta]
	features = catppuccin-frappe ; side-by-side line-numbers

	file-style = yellow bold
	file-decoration-style = yellow bold ol ul
	hunk-header-style = omit
